<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AboutActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/about_pokemon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvRomario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="ROMARIO - RM 336671"
        android:textColor="#FFFBFB"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvIgor"
        app:layout_constraintTop_toBottomOf="@+id/tvIgor" />

    <TextView
        android:id="@+id/tvIgor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="IGOR - RM 338019"
        android:textColor="#FFFBFB"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvGuilherme"
        app:layout_constraintTop_toBottomOf="@+id/tvGuilherme" />

    <TextView
        android:id="@+id/tvDiego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="DIEGO - RM 337746"
        android:textColor="#FFFBFB"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGuilherme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="GUILHERME - RM 337771"
        android:textColor="#FFFBFB"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvDiego"
        app:layout_constraintTop_toBottomOf="@+id/tvDiego" />

</androidx.constraintlayout.widget.ConstraintLayout>